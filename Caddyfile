{$DOMAIN} {
    encode gzip zstd

    # User uploads (MEDIA_ROOT on the host is ./media)
    handle_path /media/* {
        root * /srv/media
        file_server
    }

    # Collected static (STATIC_ROOT on the host is ./staticfiles)
    handle_path /static/* {
        root * /srv/static
        file_server
    }

    reverse_proxy web:8000
}

